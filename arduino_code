#include <SoftwareSerial.h>
#include <DFRobotDFPlayerMini.h>

SoftwareSerial mySerial(10, 11);
DFRobotDFPlayerMini player;

void setup() {
  mySerial.begin(9600);
  Serial.begin(9600);
  if (!player.begin(mySerial)) {
    Serial.println("DFPlayer not found");
    while (true) { delay(1000); } 
  }
  player.volume(30);  
  player.loop(1);      
}

void loop() {

}
